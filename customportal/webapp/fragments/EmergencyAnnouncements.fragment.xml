<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idEmergencyAnnouncementDialog"
        showHeader="false"
        title="Emergency Announcements"
        contentWidth="40rem"
        resizable="false"
        draggable="false"
        afterClose="onAfterCloseEmergencyDialog"
    >
        <content>

            <ScrollContainer
                height="400px"
                width="100%"
                vertical="true"
                horizontal="false"
            >
                <List
                    id="idEmergencyList"
                    items="{emergencyModel>/announcements}"
                    noDataText="No emergency announcements"
                >
                    <CustomListItem type="Inactive">
                        <HBox
                            width="100%"
                            alignItems="Start"
                        >
                            <!-- Blue line -->
                            <VBox
                                width="0.5rem"
                                class="sapUiTinyMarginEnd"
                            >
                                <VBox
                                    class="lineBlue"
                                    height="100%"
                                    width="4px"
                                />
                            </VBox>

                            <!-- Main section -->
                            <VBox
                                width="100%"
                                class="sapUiTinyMarginBottom"
                            >
                                <VBox width="100%">
                                    <!-- Title BLUE -->
                                    <Text
                                        text="{emergencyModel>title}"
                                        class="sapUiSmallMarginBottom emergencyTitleBlue"
                                    />

                                    <!-- Time -->
                                    <Text
                                        text="{emergencyModel>timeAgo}"
                                        class="sapUiTinyMarginBottom"
                                    />
                                </VBox>

                                <!-- Description -->
                                <Text
                                    text="{emergencyModel>description}"
                                    wrapping="true"
                                    class="sapUiSmallMarginTop"
                                />
                            </VBox>
                        </HBox>
                    </CustomListItem>
                </List>
            </ScrollContainer>
        </content>

        <!-- Footer with Close Button aligned to right -->
        <endButton>
            <Button
                text="Close"
                type="Emphasized"
                press="onDismissAllEmergencyAnnouncements"
            />
        </endButton> 
    </Dialog>
</core:FragmentDefinition>
