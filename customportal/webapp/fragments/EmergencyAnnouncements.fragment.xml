<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idEmergencyAnnouncementDialog"
        showHeader="false"
        contentWidth="48rem"
        resizable="false"
        draggable="false"
        afterClose="onAfterCloseEmergencyDialog"
    >
        <content>
            <VBox class="emergencyDialogContainer">

                <!-- Header row: Title + Close -->
                <HBox
                    justifyContent="SpaceBetween"
                    alignItems="Start"
                    class="emergencyHeader"
                >
                    <Text
                        text="{emergencyModel>/announcements/0/title}"
                        class="emergencyTitle"
                        wrapping="true"
                    />

                    <Button
                        icon="sap-icon://decline"
                        type="Transparent"
                        press="onDismissAllEmergencyAnnouncements"
                    />
                </HBox>
                <!-- Time -->
                <Text
                    text="{emergencyModel>/announcements/0/timeAgo}"
                    class="emergencyTime"
                />

                <!-- Description -->
                <Text
                    text="{emergencyModel>/announcements/0/description}"
                    wrapping="true"
                    class="emergencyDescription"
                />

                <!-- Read more -->
                <HBox class="sapUiSmallMarginTop">
                    <Text text="Read more:" class="sapUiTinyMarginEnd" />
                    <Link
                        text="{emergencyModel>/announcements/0/link}"
                        href="{emergencyModel>/announcements/0/link}"
                        target="_blank"
                        class="emergencyReadMore"
                    />
                </HBox>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>
